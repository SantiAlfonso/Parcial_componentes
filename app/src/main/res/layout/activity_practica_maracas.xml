<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticaMaracas">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="148dp"
        android:text="Instrucciones:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TxtInstrucciones"
        android:layout_width="335dp"
        android:layout_height="260dp"
        android:padding="8dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/personaliza_editext"
        android:text="Para poder usar las maracas tiene que mover tu celular para que suene."
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnVolverMaracas"
        android:layout_width="178dp"
        android:layout_height="61dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="10dp"
        android:text="Volver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="178dp"
        android:layout_height="61dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="64dp"
        android:text="Comenzar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtInstrucciones" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="411dp"
        android:layout_height="78dp"
        android:background="#FF5555"
        android:gravity="center"
        android:text="PRACTICA DE MARACAS"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>